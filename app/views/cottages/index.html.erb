<div class="container">
  <div class="row">
    <div class="col-12">
      <h1>Find your home away</h1>
    </div>
  </div>
</div>

<div class="album bg-body-tertiary">
  <div class="container">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
      <% @cottages.each do |cottage| %>
          <div class="col">
            <div class="cottage-card shadow-sm">
              <div class="cottage-card-image">
                <%= image_tag("cottages/cottage2.jpg", width: '100%') %>
              </div>
              <div class="cottage-card-body m-3">
                <p class="cottage-card-text fw-bold"><%= cottage.name %></p>
                <p class="cottage-card-text"><i class="fa-solid fa-location-dot"></i>  <%= cottage.address %></p>
                <div class="d-flex justify-content-between">
                <p><i class="fa-solid fa-users"></i> <%= cottage.number_of_guests %></p>
                <p>Â£ <%= cottage.price_per_night %></p>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group mb-2">
                    <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "Details", cottage_path(cottage) %></button>
                    <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                    <button type="button" class="btn btn-sm btn-outline-secondary">Delete</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
      <% end %>
    </div>
</div>
